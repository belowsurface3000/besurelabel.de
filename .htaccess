# fix react hashrouting
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    RewriteRule ^index\.html$ - [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /index.html [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^([^\.]+)$ $1.html [NC,L]
    RewriteCond %{SERVER_PORT} 80
    RewriteRule ^(.*)$ https://besurelabel.de$1 [R,L]
</IfModule>

# on 403, send user to main
ErrorDocument 403 /

# hide htaccess file
<Files .htaccess>
order allow,deny
deny from all
</Files>